                <Button Text="Medicamentos" Clicked="Button_Clicked_5" Style="{StaticResource botaoRosa}" />
                <Button Text="Atividades" Clicked="Button_Clicked_6" Style="{StaticResource botaoRosa}" />


                <StackLayout  Padding="25"  >
                </StackLayout>

                <Button x:Name="btVoltar" Text="Voltar"
                        HorizontalOptions="Center"  FontSize="Medium"
                        Clicked="BtVoltar_Clicked" Padding="15"/>

            </StackLayout>
            
            
       
    </ContentPage.Content>
</ContentPage>